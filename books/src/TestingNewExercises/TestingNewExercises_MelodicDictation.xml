    <key>a</key>
    <time>24</time>
    <fragment>24;(n * q)(n * q),(n * q)(n * q)</fragment>
    <fragment>24;(n * q)(n * q),(n * q)(r q)</fragment>
    <fragment>24;(n * q)(r q),(n * q)(r q)</fragment>
    <fragment>24;(n * q)(r q),(r q)(n * q)</fragment>
    <fragment>24;(n * q)(n * q),(r q)(n * q)</fragment>
</exercise>

